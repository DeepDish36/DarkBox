@model DarkBox.Models.CriarProjetoViewModel

@{
    Layout = null;
    ViewData["Title"] = "Criar Novo Projeto";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - DarkBox</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
        background: #2a2d35;
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        }

        .container {
        background: #1c1f26;
        padding: 30px;
        border-radius: 10px;
        width: 100%;
        max-width: 500px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        h2 {
        text-align: center;
        margin-bottom: 20px;
        }

        .btn-primary {
        width: 100%;
        }
    </style>
</head>
<body>

    <div class="container">
        @{
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
        }
        <h2>Criar Novo Projeto</h2>

        <form asp-controller="Projetos" asp-action="CriarProjeto" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="Nome" class="form-label">Nome do Projeto</label>
                <input type="text" class="form-control" asp-for="Nome" required>
            </div>

            <div class="mb-3">
                <label for="Descricao" class="form-label">Descrição</label>
                <textarea class="form-control" asp-for="Descricao" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label for="Readme" class="form-label">README (Markdown)</label>
                <textarea class="form-control" asp-for="Readme" rows="5"></textarea>
            </div>

            <div class="mb-3">
                <label for="Arquivos" class="form-label">Anexar Arquivos</label>
                <input type="file" class="form-control" asp-for="Arquivos" multiple>
            </div>

            <button type="submit" class="btn btn-primary">Criar Projeto</button>
        </form>
    </div>

</body>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</html>
