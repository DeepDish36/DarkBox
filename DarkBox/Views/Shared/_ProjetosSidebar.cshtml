@model List<DarkBox.Models.ProjectRequest>

@if (Model.Any())
{
    <div class="list-group">
        <h5>Projetos em Andamento</h5>
        @foreach (var projeto in Model)
        {
            <a class="list-group-item list-group-item-action"
               asp-controller="ProjectRequest" asp-action="Detalhes" asp-route-id="@projeto.RequestId">
                🔹 @projeto.RequestedTitle
            </a>
        }
    </div>
}
