@model List<DarkBox.Models.ProjectRequest>

@{
    ViewData["Title"] = "Meus Pedidos de Projeto";
}

<div class="container mt-4">
    <h2>📌 Meus Pedidos de Projeto</h2>

    <a href="@Url.Action("NovoPedido", "ProjectRequest")" class="btn btn-success mb-3">Novo Pedido</a>

    @if (Model.Any())
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Descrição</th>
                    <th>Status</th>
                    <th>Data</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pedido in Model)
                {
                    <tr>
                        <td>@pedido.RequestedTitle</td>
                        <td>@pedido.RequestedDescription</td>
                        <td>@pedido.Status</td>
                        <td>@pedido.CreatedAt?.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted text-white">Nenhum pedido feito ainda.</p>
    }
</div>

