@model DarkBox.Models.ProjectRequest

@{
    ViewData["Title"] = "Novo Pedido de Projeto";
}

<div class="container mt-4">
    <h2>📌 Solicitar um Novo Projeto</h2>

    <form asp-action="NovoPedido" method="post">
        <div class="mb-3">
            <label class="form-label">Título do Projeto</label>
            <input asp-for="RequestedTitle" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Descrição</label>
            <textarea asp-for="RequestedDescription" class="form-control" rows="4" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Enviar Pedido</button>
    </form>
</div>

